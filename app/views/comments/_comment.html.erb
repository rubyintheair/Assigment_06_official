<div class="box" id="<%= dom_id comment %>">
  <div class="media">
    <div class="media-left">
      <div class="image is-64x64">
        <%= image_tag(comment.user.image_url_or_default) %> 
      </div>
    </div>

    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= link_to comment.user.name, "/" %></strong>
          <small><%= time_ago_in_words comment.updated_at %> ago</small>
          <br>
          <%= comment.body %>
        </p>
      </div>
    </div>
    <div class="level-item">
      <%= link_to fa_icon("thumbs-up", text: "Like"), toggle_like_path(comment_id: comment.id), class: " js-like-button button is-white #{"is-liked" if current_user.liking?(comment)}", 
      method: "post",
      remote: true 
      %>
    </div>
    <div class="level-item">
      <%= link_to fa_icon("comments", text: "Comment"), new_comment_path, class: "button is-white" %>
    </div>
  </div>
</div>